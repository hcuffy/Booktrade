<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css">
  <link href="/main.css" rel="stylesheet" type="text/css">
  <title>My Books</title>
</head>

<nav>
  <h3 style="padding-right: 140px;">
    Book Trading Club
  </h3>
  <a href="/book/books"><button type="button" class="btn btn-primary">All Books</button></a>
  <a href="/user/logout"><i class="fas fa-sign-out-alt"></i></a>
  <a href="/user/profile"><i class="fas fa-user-circle"></i></a>
</nav>

<body>
  <form action="/search" method="get">
    Add Book: <input type="text" name="search">
    <input type="submit" value="Add">
  </form>
  <hr>
  <h3>
    Trade Requests
  </h3>
  <hr>

  <div class="search_results">
    <%for (var i = 0; i < books.length; i++){ %>
      <div class="request-div">
        <figure class="figure-comp">
          <button type="button" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-exchange-alt"> </i>
          </button>
          <img src="<%=books[i].cover%>" alt="No Cover Available" width="180" height="270">
          <figcaption>
            <%= books[i].title %>
          </figcaption>
        </figure>
        <%}%>
      </div>
  </div>

  <hr>
  <h3 class="myBooks">My Books</h3>
  <hr>

  <div class="search_results">
    <%for (var i = 0; i < books.length; i++){ %>
      <div class="figure_div">
        <figure>
          <img src="<%=books[i].cover%>" alt="No Cover Available" width="180" height="270">
          <figcaption>
            <%= books[i].title %>
          </figcaption>
        </figure>
        <%}%>
      </div>
  </div>

</body>
</html>
