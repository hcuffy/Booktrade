<html>

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css">
    <link href="/main.css" rel="stylesheet" type="text/css">
    <title>Books</title>
  </head>

  <nav>
    <h3 style="padding-right: 140px;">
      Book Trading Club
    </h3>
    <a href="/book/mybooks"><button type="button" class="btn btn-primary">My Books</button></a>
    <a href="/user/logout"><i class="fas fa-sign-out-alt"></i></a>
    <a href="/user/profile"><i class="fas fa-user-circle"></i></a>
  </nav>

  <body>
    <hr>
    <h3>
      Outstanding Trades
    </h3>
    <%if (myReq.length > 0){ %>
      <div class="search_results">
        <%for (var i = 0; i < myReq.length; i++){ %>
          <div class="figure_div">
            <label class="req-label">
              <%= myReq[i].title %>
            </label>
          </div>
        <%}%>
      </div>
    <%}%>

    <hr>
      <h3>
        Accepted Trade
      </h3>
    <hr>
    <%if (accBooks.length > 0){ %>
      <div class="search_results">
        <%for (var i = 0; i < accBooks.length; i++){ %>
          <div class="figure_div">
            <label class="req-label">
              <%= accBooks[i].title%> Contact: <%= accBooks[i].accepted[0].acceptor%>
            </label>
          </div>
        <%}%>
      </div>
    <%}%>

    <hr>
      <h3>
        All Books
      </h3>
    <hr>
      <%if (books.length > 0){ %>
        <div class="search_results">
          <%for (var i = 0; i < books.length; i++){ %>
            <div class="figure_div">
              <figure class="figure-comp">
                <button type="button" id="<%=books[i].id%>" class="btn btn-outline-primary">Trade</button>
                <img src="<%=books[i].cover%>" alt="No Cover Available" width="180" height="270">
                <figcaption>
                  <%= books[i].title %>
                </figcaption>
              </figure>
              <%}%>
            </div>
        </div>
      <%}%>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="/main.js"></script>
  </body>

</html>
